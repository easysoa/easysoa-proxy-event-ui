<%= form_for(@jxpathc, :validate => true, :url => {:action => 'newcustomjxpath'}, :html => {:class => "form-horizontal"}) do |f| %>

    <% if @jxpathc.errors.any? %>
        <div class="alert alert-error">
          <ul>
            <% @jxpathc.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= f.label :value %>
    <%= f.text_field :value %>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <br/>
    <br/>
    <div class="actions">
      <%= f.submit :value => "Create", :class => "btn btn-info", :label => 'Create' %>
    </div>

<% end %>
