<%= form_for(@customjxpath, :validate => true, :url => {:action => 'newcustomjxpath'}, :html => {:class => "form-horizontal"}) do |f| %>
    <% if @customjxpath.errors.any? %>
        <div class="alert alert-error">
          <ul>
            <% @customjxpath.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <%= f.label :value %>
    <%= f.text_field :value %>

    <%= f.label :description %>
    <%= f.text_area :description %>


    <input id='customjxpath_id' name='customjxpath[id]' value='  <%= @customjxpath.id %> ' type="hidden"/>
    <br/>
    <br/>
    <div class="actions">
      <%= f.submit :value => "Edit", :class => "btn btn-info" %>
    </div>
<% end %>

